<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.BluetoothZoomain"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:icon="@drawable/zoomoney"
        android:label="ZooMoney" >
        <activity android:name="com.ZoomoneyApp.android.Zoomoney.ZoomainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ZoomoneyApp.android.Zoomoney.BluetoothZoomain"
            android:configChanges="orientation|keyboardHidden"
            android:label="ZooMoney" >
        </activity>
        <activity
            android:name="com.ZoomoneyApp.android.Zoomoney.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/select_device"
            android:theme="@android:style/Theme.Holo.Dialog" />
    </application>

</manifest>